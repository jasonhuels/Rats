@{
  Layout = "_Layout";
}

@model Ratstaurant.Models.Restaurant

<h4>Add a new restaurant</h4>
<div class="well">
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
        @Html.LabelFor(model => model.Address)
        @Html.TextBoxFor(model => model.Address, new {@class = "form-control"})
        @Html.LabelFor(model => model.Rat)
        @Html.TextBoxFor(model => model.Rat, new {@class = "form-control"})
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new {@class = "form-control"})

        @Html.LabelFor(model => model.Cuisine)
        @Html.DropDownList("CuisineID")
        <input type="submit" value="Add new Restaurant" />
    }
    <p>@Html.ActionLink("Show all animals", "Index")</p>
</div>
